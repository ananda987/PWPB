<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
</head>

<body>
    <div class="container mt-3">
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Tambah
        </button>
        <a href="/transaksi">
            <i class="fa-solid fa-cart-shopping fa-beat-fade"></i>

        </a>
        <a href="/shop/<%= id %>">
            <i class="fa-solid fa-shop fa-beat"></i>
        </a>
        <% if (user) { %>
            <h3>saldo anda : <%= user.saldo %></h3>
            <% if (user.role == 1) {%>
                <button type="button" class="btn btn-primary" data-bs-target="#exampleModal"></button>
                <% } %>
                <a href="shop/<%= id %>">
                    <i class="fa-solid fa-shop fa-beat-fade"></i>
                </a>

      <%  } %>
        <div class="row">
            <div class="col-md-6">
                <table border="1" class="table table-success table-striped">
                    <tr>
                        <th>Id</th>
                        <th>Nama Barang</th>
                        <th>Harga</th>
                        <th>Stock</th>
                        <th>Hapus</th>
                        <th>Beli Barang</th>
                    </tr>
                    <% for(let a of bar){ %>
                        <tr>
                            <td>
                                <%= a.id_barang %>
                            </td>
                            <td>
                                <%= a.Nama_barang %>
                            </td>
                            <td>
                                <%= uang(a.harga) %>
                            </td>
                            <td>
                                <%= a. new_stock %>
                            </td>
                            <td>
                                <a href="/hapusBarang/<%= a.id_barang %>" onclick="return confirm('yakin kh maniezz?')"
                                    class="badge bg-danger">hapus</a>
                            </td>
                            <td>
                                <% if (user){%>
                                <a href="/hapusBarang/<%= a.id_barang %>" onclick="return confirm('ykin kh maniezz?')"
                                    class="badge bg-danger">hapus</a>
                                    <% } %>
                            </td>
                            <td>
                                <button type="button" class="badge bg-success" data-bs-toggle="modal"
                                    onclick="barang('<%= a.id_barang %>','<%= a.harga %>','<%= a.new_stock %>')"
                                    data-bs-target="#modalBarang">
                                    Beli Barang
                                </button>
                            </td>
                        </tr>
                        <% } %>
                </table>
            </div>
            
        </div>
    </div>

<%- include('modal.ejs') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>
        <script src="/script.js"></script>
</body>

</html>